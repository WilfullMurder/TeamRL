<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fx:id="profileBGImageView">
            <image>
                <Image url="@img/background-solid.png" />
            </image>
        </ImageView>
        <AnchorPane fx:id="profileHeaderAnchorPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="homeBtn" layoutX="10.0" layoutY="8.0" mnemonicParsing="false" text="Home" />
                <Button fx:id="signOutBtn" layoutX="530.0" layoutY="8.0" mnemonicParsing="false" text="Sign out" />
                <Text fx:id="profileTitleText" fill="DARKGRAY" layoutX="243.0" layoutY="47.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Profile">
                    <font>
                        <Font size="36.0" />
                    </font>
                </Text>
            </children>
        </AnchorPane>
      <TableView fx:id="profileTableView" >
        <columns>
          <TableColumn fx:id="profileTableColName" prefWidth="75.0" text="name" />
          <TableColumn fx:id="profileTableColDesc" prefWidth="75.0" text="description" />
            <TableColumn fx:id="profileTableColTime" prefWidth="75.0" text="time" />
            <TableColumn fx:id="profileTableColLocation" prefWidth="75.0" text="location" />
            <TableColumn fx:id="profileTableColContact" prefWidth="75.0" text="contact" />
        </columns>
      </TableView>
    </children>
</AnchorPane>
