<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.teamRl.RegistrationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100" prefWidth="100" />
            <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200" prefWidth="200" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
        </rowConstraints>
        <!-- add Header label -->
        <Label text="Registration form (FXML)" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
        <children>
            <!-- add name labels and fields -->
            <Label text="Forename: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="forenameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Surname: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="surnameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <!-- add UOB labels and fields -->
            <Label text="UoB: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="uobField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <!-- add email labels and fields -->
            <Label text="Email: " GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="emailField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <!-- add password labels and fields -->
            <Label text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <PasswordField fx:id="passwordField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        </children>
    </GridPane>

    <Button fx:id="submitBtn" text="Submit" onAction="#register"/>

</VBox>